{
	"compilerOptions": {
		"esModuleInterop": true,
		"removeComments": true,

		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"skipLibCheck": true,
		"isolatedModules": true,

		"noEmit": true,

		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"resolveJsonModule": true,

		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"knex/types/tables": ["./typings/knex"],
			"@shared": ["./src/_shared/index"],
			"src": ["./src"]
		},
		"typeRoots": ["node_modules/@types", "./typings"]
	}
}
